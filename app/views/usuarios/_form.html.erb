<%= form_for(@usuario, :html => {:class => "form-horizontal"})  do |f| %>

    <div class="row">
      <div class="col-xs-12 col-lg-2"></div>
      <div class="col-xs-12 col-lg-8">
        <section class="panel">
          <div class="panel-body">

            <div class="form-group">
              <label for="cadastroNome" class="col-lg-2 control-label">Nome</label>
              <div class="col-lg-10">
                <%= f.text_field :nome, :class => 'form-control', :placeholder => 'Nome' %>
              </div>
            </div>
            <div class="form-group">
              <label for="cadastroEmail" class="col-lg-2 control-label">Email</label>
              <div class="col-lg-10">

                <div class="input-group">
                  <%= f.text_field:email,:class => 'form-control', :placeholder => 'Email', :value => @usuario.email.split("@")[0] %>
                  <span class="input-group-addon" id="basic-addon2">@id.uff.br</span>
                </div>

              </div>
            </div>
            <div class="form-group">
              <label for="cadastroSenha" class="col-lg-2 control-label">Senha</label>
              <div class="col-lg-10">
                <%= f.password_field :senha, :class => 'form-control', :placeholder => 'Senha', value: @usuario.senha %>
              </div>
            </div>
            <div class="form-group">
              <div style="text-align: center">
                <%= f.submit "Salvar", :class => 'btn btn-success'%>
              </div>
            </div>

          </div>
        </section>
      </div>
    </div>

<% end %>

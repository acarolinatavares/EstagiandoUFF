<% content_for :content do %>
    <section id="main-content">
      <section class="wrapper">
        <h1>Empresas</h1>

        <div class="row">
          <div class="col-lg-12">
            <section class="panel">

              <table class="table table-striped table-advance table-hover">
                <tbody>
                <tr>
                  <th><i class="fa fa-user"></i> Nome</th>
                  <th><i class="fa fa-cogs"></i> Ações</th>
                </tr>
                <% @empresas.each do |empresa| %>
                <tr>
                  <td><%= empresa.nome%></td>
                  <td>
                    <div class="btn-group">
                      <a class="btn btn-primary" href="#"><i class="fa fa-plus-square-o"></i></a>
                      <a class="btn btn-success" href="#"><i class="fa fa-pencil-square-o"></i></a>
                      <a class="btn btn-danger" href="#"><i class="fa fa-trash-o"></i></a>
                    </div>
                  </td>
                </tr>
                <% end %>
                </tbody>
              </table>
            </section>
          </div>
        </div>

        <br />

        <%= link_to 'Cadastrar Nova Empresa', new_empresa_path %>
      </section>
    </section>
<% end %>